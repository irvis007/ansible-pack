# Proxmox API Credentials
# Copy this file to .proxmox_credentials and fill in your values
# Then source it: source .proxmox_credentials

export PROXMOX_HOST="pve.local"          # Your Proxmox hostname or IP
export PROXMOX_NODE="pve"                # Your Proxmox node name
export PROXMOX_USER="root@pam"           # API user
export PROXMOX_TOKEN_ID="ansible-test"   # API token ID
export PROXMOX_TOKEN="your-token-here"   # API token secret

# Optional: Override defaults
export BRIDGE="vmbr0"                    # Network bridge
export STORAGE="local-lvm"               # Storage pool

# VM IPs (set dynamically by scripts, override if needed)
# export TEST_WORKSTATION_IP="192.168.1.100"
# export TEST_SERVER_IP="192.168.1.101"
